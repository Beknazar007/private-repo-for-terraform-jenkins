pipeline {
    agent any
    stages {
        stage('input') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who run pipe')
                    text(name: 'DESCRIPTION', defaultValue: 'asdf', description: 'Enter some information about the run')
                    booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')
                    choice(name: 'CHOICE', choices: ['dev', 'stag', 'prod'], description: 'Pick something')
                }
            }
            steps {
                
                echo "Hello, ${PERSON},${CHOICE},${TOGGLE},${DESCRIPTION} nice to meet you."
            }
        }
    }
}